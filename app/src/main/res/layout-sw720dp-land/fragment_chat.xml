<ScrollView
    tools:context="com.webmyne.geleza_learnerportal.Home.ChatFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    xmlns:expandable="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

   >


    <com.andexert.expandablelayout.library.ExpandableLayout
        android:id="@+id/expand_mostTalkedAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        expandable:headerLayout="@layout/view_header"
        expandable:contentLayout="@layout/view_content">

    <ImageView
        android:id="@+id/img_t1"
        android:visibility="gone"
    android:layout_marginTop="50dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/t1"/>


    </com.andexert.expandablelayout.library.ExpandableLayout>

    <com.andexert.expandablelayout.library.ExpandableLayout
        android:id="@+id/expand_friends_online"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        expandable:headerLayout="@layout/view_header"
        expandable:contentLayout="@layout/view_content">

        <ImageView
            android:id="@+id/img_t2"
            android:visibility="gone"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/t2"/>


    </com.andexert.expandablelayout.library.ExpandableLayout>

    <com.andexert.expandablelayout.library.ExpandableLayout
        android:id="@+id/expand_educators_online"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        expandable:headerLayout="@layout/view_header"
        expandable:contentLayout="@layout/view_content">

        <ImageView
            android:id="@+id/img_t3"
            android:visibility="gone"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/t1"/>


    </com.andexert.expandablelayout.library.ExpandableLayout>
    <com.andexert.expandablelayout.library.ExpandableLayout
        android:id="@+id/expand_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        expandable:headerLayout="@layout/view_header"
        expandable:contentLayout="@layout/view_content">

        <ImageView
            android:id="@+id/img_t4"
            android:visibility="gone"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/t2"/>


    </com.andexert.expandablelayout.library.ExpandableLayout>
    <com.andexert.expandablelayout.library.ExpandableLayout
        android:id="@+id/expand_chats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        expandable:headerLayout="@layout/view_header"
        expandable:contentLayout="@layout/view_content"
        />



</LinearLayout>

</ScrollView>
