<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.webmyne.geleza_learnerportal.Home.HomeFragment">

    <FrameLayout
        android:id="@+id/leftContainer"
        android:layout_weight="4.4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <LinearLayout
        android:id="@+id/middleContainer"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:background="@color/light_green"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="@dimen/action_strip"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Spinner
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:editable="false"
                android:focusable="false"
                style="@style/SpinnerAsEditText"
                android:textColor="#b1b1b1"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_marginLeft="48dp"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:text="All Year"
                android:spinnerMode="dropdown"
                android:popupBackground="@color/light_green"
                android:entries="@array/year_array"
                 />


                <ImageView
                    android:layout_marginRight="16dp"
                    android:layout_gravity="right|center_vertical"
                    android:contentDescription="@string/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_hardware_keyboard_arrow_down"
                    android:scaleType="centerInside" />


            </FrameLayout>

        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Spinner
                android:spinnerMode="dropdown"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:editable="false"
                android:focusable="false"
                style="@style/SpinnerAsEditText"
                android:textColor="#b1b1b1"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:text="Physics"
                android:popupBackground="@color/light_green"
                android:entries="@array/subject_array"
                 />

            <ImageView
                android:layout_marginRight="16dp"
                android:layout_gravity="right|center_vertical"
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_hardware_keyboard_arrow_down"
                android:scaleType="centerInside" />

            </FrameLayout>


        <FrameLayout
            android:layout_marginRight="48dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Spinner
                android:spinnerMode="dropdown"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:editable="false"
                android:focusable="false"
                style="@style/SpinnerAsEditText"
                android:textColor="#b1b1b1"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_width="240dp"
                android:layout_height="match_parent"
                android:text="Tests"
                android:popupBackground="@color/light_green"
                android:entries="@array/homework_array"
                />



            <ImageView
                android:layout_marginRight="16dp"
                android:layout_gravity="right|center_vertical"
                android:contentDescription="@string/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_hardware_keyboard_arrow_down"
                android:scaleType="centerInside" />

        </FrameLayout>

        </FrameLayout>


        <ImageView
            android:layout_margin="32dp"
            android:contentDescription="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_chart"
            android:scaleType="centerInside" />


  </LinearLayout>


</LinearLayout>
