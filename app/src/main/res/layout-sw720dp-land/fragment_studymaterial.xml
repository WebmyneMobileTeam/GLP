<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.webmyne.geleza_learnerportal.Home.HomeFragment">



    <LinearLayout
        android:background="@color/background_color"
        android:id="@+id/linearSideStudyMaterial"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearMainStudyMaterial"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:id="@+id/imgMainStudyMaterial"
            android:contentDescription="@string/app_name"
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:src="@drawable/study_material_noimage"
            android:scaleType="fitStart" />


    </LinearLayout>



</FrameLayout>
